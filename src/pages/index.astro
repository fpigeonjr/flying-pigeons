---
const shows = [
    { date: "2025-09-18", venue: "Mohawk", city: "Austin, TX", tickets: "https://example.com/tickets/austin" },
    { date: "2025-10-02", venue: "House of Blues", city: "Dallas, TX", tickets: "https://example.com/tickets/dallas" },
    { date: "2025-11-05", venue: "The Roxy", city: "Los Angeles, CA", tickets: "https://example.com/tickets/la" },
];
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>The Flying Pigeons</title>
        <style>
            body {
                font-family: system-ui, sans-serif;
                margin: 0;
                padding: 0;
                background: #111;
                color: #eee;
            }
            header {
                padding: 2rem;
                text-align: center;
                background: #222;
            }
            h1 {
                margin: 0;
                font-size: 3rem;
            }
            section {
                padding: 2rem;
                max-width: 800px;
                margin: 0 auto;
            }
            .shows li {
                margin-bottom: 1rem;
            }
            a {
                color: #0ff;
            }
            .video-wrapper {
                position: relative;
                padding-top: 56.25%; /* 16:9 ratio */
            }
            .video-wrapper iframe {
                position: absolute;
                inset: 0;
                width: 100%;
                height: 100%;
                border: 0;
            }
        </style>
    </head>
    <body>
        <header>
            <h1>The Flying Pigeons</h1>
            <p>Rocking out since 2025</p>
        </header>

        <section>
            <h2>Upcoming Shows</h2>
            <ul class="shows">
                {
                    shows.map((show) => (
                        <li>
                            <strong>{show.date}</strong> â€” {show.venue}, {show.city}
                            {show.tickets && (
                                <>
                                    {" "}
                                    <a href={show.tickets} target="_blank">
                                        Tickets
                                    </a>
                                </>
                            )}
                        </li>
                    ))
                }
            </ul>
        </section>

        <section>
            <h2>Watch Us Play</h2>
            <div class="video-wrapper">
                <iframe
                    src="https://www.youtube.com/embed/YOUR_VIDEO_ID"
                    title="YouTube video player"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                >
                </iframe>
            </div>
        </section>
    </body>
</html>
